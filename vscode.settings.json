{
    // WINDOW
    "window.titleBarStyle": "custom",

    // WORKBENCH
    "workbench.colorTheme":"Monokai",
    "workbench.colorCustomizations": {
        "[Monokai]": {
            "tab.activeBackground": "#0059ffa4",
            "tab.activeBorder": "#fffb0050"
        }
    },
    "workbench.editor.closeEmptyGroups": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.feedback.visible": false,

    // TERMINAL
    "terminal.integrated.fontFamily": "'Hack', 'monospace', monospace, 'Droid Sans Fallback'",
    "terminal.integrated.fontSize": 14,

    // EDITOR
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.detectIndentation": false,
    "editor.fontFamily": "'Courier Prime Code', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 14,
    "editor.minimap.enabled": false,
    "editor.rulers": [100],
    "editor.wordWrapColumn": 100,

    // EDITOR > FORMATTER
    "editor.formatOnSave": false,
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.formatOnSave": true
    },
    "[css]": {
        "editor.formatOnSave": true
    },

    // PRETTIER
    "prettier.bracketSpacing": false,
    "prettier.eslintIntegration": true,
    "prettier.printWidth": 100,
    "prettier.tabWidth": 4,

    // VIM
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "d"],
            "after": ["d", "d"]
        },
        {
            "before": ["<leader>", "<leader>"],
            "commands": [":nohl"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["Y"],
            "after": ["y", "$"]
        }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    }
}